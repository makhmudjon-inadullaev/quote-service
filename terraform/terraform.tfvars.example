# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

project_name        = "quote-service"
resource_group_name = "rg-quote-service"
location           = "East US"
environment        = "dev"

# Database configuration
db_admin_username = "quoteadmin"
db_admin_password = "YourSecurePassword123!"

# App Service configuration
app_service_sku = "B1"  # Basic tier, change to P1V2 for production

# PostgreSQL configuration
postgres_sku       = "B_Standard_B1ms"  # Basic tier
postgres_storage_mb = 32768  # 32GB

# Redis configuration
redis_sku      = "Basic"
redis_family   = "C"
redis_capacity = 0  # 250MB for Basic C0

# Container Registry configuration
container_registry_sku = "Basic"

# Common tags
common_tags = {
  Project     = "quote-service"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "your-team"
}