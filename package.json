{
  "name": "quote-service",
  "version": "1.0.0",
  "description": "A web service that provides random quotes through REST and GraphQL APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start:docker": "scripts/start.sh",
    "start:windows": "scripts/start.bat",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t quote-service .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f quote-service"
  },
  "keywords": [
    "quotes",
    "api",
    "fastify",
    "graphql",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/env": "^4.2.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^5.6.0",
    "@types/redis": "^4.0.10",
    "axios": "^1.6.2",
    "fastify": "^4.24.3",
    "graphql": "^16.8.1",
    "mercurius": "^13.3.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prisma": "^5.6.0",
    "redis": "^4.7.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
